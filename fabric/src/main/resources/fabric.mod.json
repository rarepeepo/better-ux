{
  "schemaVersion": 1,
  "id": "betterux",
  "version": "${version}",
  "name": "Better UX",
  "description": "This mod adds various little UX improvements to enhance the overall user experience.",
  "authors": [
    "rarepeepo"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/better-ux",
    "sources": "https://github.com/rarepeepo/better-ux"
  },
  "license": "GPL-3.0-or-later",
  "icon": "assets/betterux/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "rare.peepo.fabric.BetterUXFabric"
    ],
    "client": [
      "rare.peepo.fabric.client.BetterUXFabricClient"
    ]
  },
  "mixins": [
    {
      "config": "betterux.mixins.json",
      "environment": "*"
    },
    {
      "config": "betterux.mixins.client.json",
      "environment": "client"
    }
